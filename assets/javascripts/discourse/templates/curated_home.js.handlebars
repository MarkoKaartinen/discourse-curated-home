<div class='contents curated-home'>

  {{#if Discourse.SiteSettings.curated_home_show_sidebar}}
    <div class="side-bar-wrap">
      <section class="main-outlet-wrap">

        {{#if hasTopics}}
          {{each topics itemController="topic-list-item" itemViewClass="topic-list-blog-item"}}
        {{/if}}

      </section>
      <aside class="side-bar">{{view Discourse.SidebarView}}</aside>
      <div class="clearfix"></div>
    </div>
  {{else}}
    {{#if hasTopics}}
      {{each topics itemController="topic-list-item" itemViewClass="topic-list-blog-item"}}
    {{/if}}
  {{/if}}
</div>

<footer class='topic-list-bottom'>
  {{loading-spinner condition=loadingMore}}
  {{#if allLoaded}}
    <div class="education">
        {{{footerEducation}}}
      {{#if can_create_topic}}<a href='#' {{action "createTopic"}}>{{i18n 'topic.suggest_create_topic'}}</a>{{/if}}
    </div>
    <h3>
      {{footerMessage}}{{#link-to "discovery.categories"}} {{i18n 'topic.browse_all_categories'}}{{/link-to}} {{i18n 'or'}} {{#link-to 'discovery.latest'}}{{i18n 'topic.view_latest_topics'}}{{/link-to}}
    </h3>
  {{/if}}
</footer>